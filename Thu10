local gravityOn = false
-- Frame ch·ª©a TextBox
local gravityFrame = Instance.new("Frame")
gravityFrame.Size = UDim2.new(1, -10, 0, 40)
gravityFrame.BackgroundColor3 = Color3.fromRGB(60,60,60)
