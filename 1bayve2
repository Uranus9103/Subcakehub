-- LocalScript trong StarterPlayerScripts hoáº·c StarterGui

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")
local humanoid = character:WaitForChild("Humanoid")

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FlyBackSystem"
ScreenGui.Parent = player:WaitForChild("PlayerGui")

local saveBtn = Instance.new("TextButton")
saveBtn.Size = UDim2.new(0, 150, 0, 50)
saveBtn.Position = UDim2.new(0, 50, 1, -120)
saveBtn.Text = "ğŸ“ LÆ°u vá»‹ trÃ­"
saveBtn.Parent = ScreenGui

local flyBtn = Instance.new("TextButton")
flyBtn.Size = UDim2.new(0, 150, 0, 50)
flyBtn.Position = UDim2.new(0, 220, 1, -120)
flyBtn.Text = "âœˆï¸ Bay vá»"
flyBtn.Parent = ScreenGui

-- Biáº¿n
local savedCFrame
local flying = false
local tween

-- HÃ m reload nhÃ¢n váº­t (respawn)
local function onCharacterAdded(char)
    character = char
    hrp = character:WaitForChild("HumanoidRootPart")
    humanoid = character:WaitForChild("Humanoid")

    -- Anti cháº¿t
    humanoid:GetPropertyChangedSignal("Health"):Connect(function()
        humanoid.Health = humanoid.MaxHealth
    end)

    -- Sau khi respawn â†’ tráº£ vá» chá»— lÆ°u
    task.defer(function()
        if savedCFrame then
            task.wait(0.5) -- chá» nhÃ¢n váº­t load
            hrp.CFrame = savedCFrame
        end
    end)
end

player.CharacterAdded:Connect(onCharacterAdded)

-- LÆ°u vá»‹ trÃ­
saveBtn.MouseButton1Click:Connect(function()
    if hrp then
        savedCFrame = hrp.CFrame
        print("âœ… ÄÃ£ lÆ°u vá»‹ trÃ­:", savedCFrame.Position)
    end
end)

-- HÃ m bay mÆ°á»£t (Tween)
local function flyTo(targetCFrame)
    if not hrp or not targetCFrame then return end
    flying = true

    -- TÃ­nh khoáº£ng cÃ¡ch
    local distance = (targetCFrame.Position - hrp.Position).Magnitude
    local flyTime = math.clamp(distance / 80, 0.5, 8)

    if tween then tween:Cancel() end

    local tweenInfo = TweenInfo.new(flyTime, Enum.EasingStyle.Sine, Enum.EasingDirection.Out)
    tween = TweenService:Create(hrp, tweenInfo, {CFrame = targetCFrame})
    tween:Play()

    tween.Completed:Connect(function()
        flying = false
        hrp.CFrame = targetCFrame -- Ä‘á»©ng chÃ­nh xÃ¡c táº¡i chá»— lÆ°u
    end)
end

-- NÃºt bay
flyBtn.MouseButton1Click:Connect(function()
    if savedCFrame then
        flyTo(savedCFrame)
    else
        warn("âš ï¸ ChÆ°a lÆ°u vá»‹ trÃ­!")
    end
end)

-- Anti reset / anti vá» spawn 100%
RunService.Stepped:Connect(function()
    if savedCFrame and hrp then
        local distance = (hrp.Position - savedCFrame.Position).Magnitude

        -- Náº¿u bá»‹ kÃ©o vá» spawn hoáº·c quÃ¡ xa â†’ tráº£ vá» ngay
        if distance > 120 then
            print("ğŸš« Anti Reset kÃ­ch hoáº¡t â†’ Ä‘Æ°a láº¡i vá»‹ trÃ­ Ä‘Ã£ lÆ°u!")
            hrp.CFrame = savedCFrame
        end
    end
end)

-- KÃ­ch hoáº¡t láº¡i anti khi nhÃ¢n váº­t respawn
onCharacterAdded(character)
