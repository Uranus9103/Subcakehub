local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "LiftGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local btn = Instance.new("TextButton")
btn.Size = UDim2.new(0,140,0,50)
btn.Position = UDim2.new(0.05,0,0.2,0)
btn.Text = "⬆️ Nâng OFF"
btn.TextScaled = true
btn.BackgroundColor3 = Color3.fromRGB(200,50,50)
btn.TextColor3 = Color3.fromRGB(255,255,255)
btn.Font = Enum.Font.GothamBold
btn.Parent = gui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0,12)
corner.Parent = btn

-- Biến
local liftPart = nil
local liftEnabled = false
local connection = nil
local speed = 11 -- ⚡ tốc độ nâng (càng cao càng nhanh)

-- Toggle
local function toggleLift()
	liftEnabled = not liftEnabled

	if liftEnabled then
		-- Tạo part dưới chân
		liftPart = Instance.new("Part")
		liftPart.Size = Vector3.new(6,1,6)
		liftPart.Anchored = true
		liftPart.CanCollide = true
		liftPart.Color = Color3.fromRGB(50,200,50)
		liftPart.Transparency = 0.2
		liftPart.Name = "LiftBlock"
		liftPart.Parent = workspace

		btn.Text = "⬆️ Nâng ON"
		btn.BackgroundColor3 = Color3.fromRGB(50,200,50)

		-- Luôn theo nhân vật + nâng dần
		connection = game:GetService("RunService").RenderStepped:Connect(function(dt)
			if hrp and liftPart and liftEnabled then
				local pos = hrp.Position - Vector3.new(0,3,0)
				-- nâng dần theo tốc độ
				liftPart.CFrame = CFrame.new(pos) * CFrame.new(0, speed*dt, 0)
			end
		end)

	else
		if liftPart then
			liftPart:Destroy()
			liftPart = nil
		end
		if connection then
			connection:Disconnect()
			connection = nil
		end
		btn.Text = "⬆️ Nâng OFF"
		btn.BackgroundColor3 = Color3.fromRGB(200,50,50)
	end
end

btn.MouseButton1Click:Connect(toggleLift)
