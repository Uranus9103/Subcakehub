local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- T·∫°o GUI
local gui = Instance.new("ScreenGui")
gui.Name = "FlyGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Frame ch√≠nh
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,180,0,140)
frame.Position = UDim2.new(0.05,0,0.2,0)
frame.BackgroundColor3 = Color3.fromRGB(40,40,40)
frame.Active = true
frame.Draggable = true -- cho ph√©p k√©o UI
frame.Parent = gui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0,12)
uiCorner.Parent = frame

-- H√†m t·∫°o n√∫t
local function createBtn(text, posY, color)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0,160,0,50)
	btn.Position = UDim2.new(0,10,0,posY)
	btn.Text = text
	btn.TextScaled = true
	btn.Font = Enum.Font.GothamBold
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.BackgroundColor3 = color
	btn.Parent = frame

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0,10)
	corner.Parent = btn
	return btn
end

-- C√°c n√∫t
local btnLift = createBtn("‚¨ÜÔ∏è N√¢ng",10,Color3.fromRGB(200,50,50))
local btnMove = createBtn("üõ´ Di chuy·ªÉn",70,Color3.fromRGB(200,150,50))

-- Bi·∫øn ƒëi·ªÅu khi·ªÉn
local liftPart = nil
local connection = nil
local mode = nil -- "N√¢ng" ho·∫∑c "Di chuy·ªÉn"
local speed = 8 -- t·ªëc ƒë·ªô n√¢ng

-- H√†m reset (x√≥a part + t·∫Øt connection)
local function resetPart()
	if liftPart then
		liftPart:Destroy()
		liftPart = nil
	end
	if connection then
		connection:Disconnect()
		connection = nil
	end
end

-- H√†m b·∫≠t part
local function enableLift(newMode)
	resetPart()
	mode = newMode
	local character = player.Character or player.CharacterAdded:Wait()
	local hrp = character:WaitForChild("HumanoidRootPart")

	liftPart = Instance.new("Part")
	liftPart.Size = Vector3.new(6,1,6)
	liftPart.Anchored = true
	liftPart.CanCollide = true
	liftPart.Color = Color3.fromRGB(50,200,50)
	liftPart.Transparency = 0.2
	liftPart.Name = "LiftBlock"
	liftPart.Parent = workspace

	connection = RunService.RenderStepped:Connect(function(dt)
		if not hrp or not liftPart then return end
		if mode == "N√¢ng" then
			local pos = hrp.Position - Vector3.new(0,3,0)
			liftPart.CFrame = CFrame.new(pos) * CFrame.new(0,speed*dt,0)
		elseif mode == "Di chuy·ªÉn" then
			liftPart.CFrame = CFrame.new(hrp.Position - Vector3.new(0,3,0))
		end
	end)
end

-- N√∫t b·∫•m
btnLift.MouseButton1Click:Connect(function()
	if mode == "N√¢ng" then
		resetPart()
		mode = nil
		btnLift.BackgroundColor3 = Color3.fromRGB(200,50,50)
	else
		enableLift("N√¢ng")
		btnLift.BackgroundColor3 = Color3.fromRGB(50,200,50)
		btnMove.BackgroundColor3 = Color3.fromRGB(200,150,50) -- t·∫Øt di chuy·ªÉn n·∫øu ƒëang b·∫≠t
	end
end)

btnMove.MouseButton1Click:Connect(function()
	if mode == "Di chuy·ªÉn" then
		resetPart()
		mode = nil
		btnMove.BackgroundColor3 = Color3.fromRGB(200,150,50)
	else
		enableLift("Di chuy·ªÉn")
		btnMove.BackgroundColor3 = Color3.fromRGB(100,200,250)
		btnLift.BackgroundColor3 = Color3.fromRGB(200,50,50) -- t·∫Øt n√¢ng n·∫øu ƒëang b·∫≠t
	end
end)

-- ƒê·∫£m b·∫£o khi ch·∫øt spawn l·∫°i v·∫´n ch·∫°y
player.CharacterAdded:Connect(function()
	if mode then
		task.wait(1)
		enableLift(mode)
	end
end)
