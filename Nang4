local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "LiftGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Nút bật/tắt
local btn = Instance.new("TextButton")
btn.Size = UDim2.new(0,140,0,50)
btn.Position = UDim2.new(0.05,0,0.2,0)
btn.Text = "⬆️ OFF"
btn.TextScaled = true
btn.BackgroundColor3 = Color3.fromRGB(200,50,50)
btn.TextColor3 = Color3.fromRGB(255,255,255)
btn.Font = Enum.Font.GothamBold
btn.Parent = gui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0,12)
corner.Parent = btn

-- Nút chế độ (Nâng / Dừng)
local modeBtn = Instance.new("TextButton")
modeBtn.Size = UDim2.new(0,140,0,50)
modeBtn.Position = UDim2.new(0.05,0,0.3,0)
modeBtn.Text = "⚙️ Chế độ: Nâng"
modeBtn.TextScaled = true
modeBtn.BackgroundColor3 = Color3.fromRGB(70,70,200)
modeBtn.TextColor3 = Color3.fromRGB(255,255,255)
modeBtn.Font = Enum.Font.GothamBold
modeBtn.Parent = gui

local corner2 = Instance.new("UICorner")
corner2.CornerRadius = UDim.new(0,12)
corner2.Parent = modeBtn

-- Biến
local liftPart = nil
local liftEnabled = false
local connection = nil
local mode = "Nâng" -- hoặc "Dừng"
local speed = 5 -- tốc độ nâng

-- Hàm toggle bật/tắt
local function toggleLift()
	liftEnabled = not liftEnabled

	if liftEnabled then
		-- Tạo part
		liftPart = Instance.new("Part")
		liftPart.Size = Vector3.new(6,1,6)
		liftPart.Anchored = true
		liftPart.CanCollide = true
		liftPart.Color = Color3.fromRGB(50,200,50)
		liftPart.Transparency = 0.2
		liftPart.Name = "LiftBlock"
		liftPart.Parent = workspace

		btn.Text = "⬆️ ON"
		btn.BackgroundColor3 = Color3.fromRGB(50,200,50)

		-- Cập nhật vị trí part
		connection = game:GetService("RunService").RenderStepped:Connect(function(dt)
			if hrp and liftPart and liftEnabled then
				if mode == "Nâng" then
					local pos = hrp.Position - Vector3.new(0,3,0)
					liftPart.CFrame = CFrame.new(pos) * CFrame.new(0, speed*dt, 0)
				elseif mode == "Dừng" then
					liftPart.CFrame = CFrame.new(hrp.Position - Vector3.new(0,3,0))
				end
			end
		end)

	else
		if liftPart then
			liftPart:Destroy()
			liftPart = nil
		end
		if connection then
			connection:Disconnect()
			connection = nil
		end
		btn.Text = "⬆️ OFF"
		btn.BackgroundColor3 = Color3.fromRGB(200,50,50)
	end
end

-- Hàm đổi chế độ
local function switchMode()
	if mode == "Nâng" then
		mode = "Dừng"
		modeBtn.Text = "⚙️ Chế độ: Dừng"
		modeBtn.BackgroundColor3 = Color3.fromRGB(200,150,50)
	else
		mode = "Nâng"
		modeBtn.Text = "⚙️ Chế độ: Nâng"
		modeBtn.BackgroundColor3 = Color3.fromRGB(70,70,200)
	end
end

btn.MouseButton1Click:Connect(toggleLift)
modeBtn.MouseButton1Click:Connect(switchMode)
